    "@wildpeaks/eslint-config-commonjs": "15.1.0",
    "@wildpeaks/prettier-config": "15.1.0",
    "eslint": "8.7.0",
    "jsdom": "19.0.0",
    "playwright": "1.18.0"
  }
}
