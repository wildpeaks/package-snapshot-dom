{
  "private": true,
  "eslintConfig": {
    "extends": "@wildpeaks/commonjs"
  },
  "eslintIgnore": [
    "packages"
  ],
  "prettier": {
    "printWidth": 120,
    "tabWidth": 4,
    "useTabs": true,
    "bracketSpacing": false
  },
  "greenkeeper": {
    "commitMessages": {
      "dependencyUpdate": "feat: update ${dependency}",
      "devDependencyUpdate": "chore: update ${dependency}"
    }
  },
  "scripts": {
    "build": "mocha src/build.js",
    "test": "mocha test/*.spec.js"
  },
  "devDependencies": {
    "@wildpeaks/eslint-config-commonjs": "8.4.0",
    "eslint": "6.8.0",
    "jsdom": "16.2.1",
    "mocha": "7.1.1",
    "prettier": "1.19.1",
    "puppeteer": "2.1.1",
    "rimraf": "3.0.2",
    "terser": "4.6.6"
  }
}
