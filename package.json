    "@wildpeaks/eslint-config-commonjs": "15.6.0",
    "@wildpeaks/prettier-config": "15.7.0",
    "eslint": "8.38.0",
    "jsdom": "21.1.1",
    "playwright": "1.32.3"
  }
}
